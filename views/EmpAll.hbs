<!DOCTYPE html>
<html>
<head>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" 
  integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
 
  <style>

#customers {
  font-family: Arial, Helvetica, sans-serif;
  border-collapse: collapse;
  margin-left: 60px;
  width: 94%;
}

#customers td, #customers th {
  border: 1px solid #150d0d;
  border-style: solid;
  border-width: 2px;
  padding: 8px;
}

#customers tr:nth-child(even){background-color: #f2f2f2;}

#customers tr:hover {background-color: #74f7cf;}

#customers th { 
  padding-top: 12px;
  padding-bottom: 12px;
  text-align: left;
  background-color: #0065fd;
  color: white;
}
.title{
  text-align: center;
  background-color: rgb(96, 201, 237);
}
.searchbar{
  margin-top: 20px;
   margin-left: 20px;
  width: 300px;
}
.Allemp{
  margin-top: 20px;
  margin-left: 240px;
 
}
#blue{
background-color: #0065fd;
color: black;
border-width: 2px;
border-color: #150d0d ;

}
#searchany{
 
  border-color: #000000;
  border-width: 2px;  
  background-color: none;
   

}

  </style>
</head>
<body>
  
<a class="nav-link active" style="margin-left: 20px;" aria-current="page" href="/dashboard">Home</a>
 <div class="title"><h2>Employees List</h2><br></div> 
 <br><br>
 
 <div class="searchbar">
 <form action ='/searchEmp' method='GET' class="d-flex" role="search">
      <input type="text" class="form-control me-2" value="{{this.ID}}"  id="searchany" name="searchany" >
      <button class="btn btn-outline-success" id="blue" type="submit">Search</button>
    </form>
 </div>
        <div class="Allemp">
 <form action ='/EmpAll' method='GET' class="d-flex" role="search">
      <button class="btn btn-outline-success" id="blue" type="submit">All Employees</button>
    </form>
 </div> 
   <table id="customers">
    <thead>
      <tr>
        <th>Emp Id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Phone Number</th>
        <th>Citizenship No</th>
        <th>Address</th>
        <th>Designation</th>
       <th style="background-color:#0065fd">Actions</th>
      </tr>
    </thead>
    <div class="table">
      <tbody>
      {{#each EmpsSchema}}
      <tr>
        <td>{{this.ID}}</td>
        <td>{{this.FirstName}}</td>
        <td>{{this.LastName}}</td>
        <td>{{this.Email}}</td>
        <td>{{this.Phone}}</td>
        <td>{{this.Citizen}}</td>
        <td>{{this.Address}}</td>
        <td>{{this.Education}}</td>
           <td>
            <form action="/deleteEmp" method="POST">
              <input type="hidden"  name="id" value="{{this.id}}">
              <button type="submit" style="background-color:rgb(246, 31, 31);margin-bottom: 5px;width:80px;">Delete</button>
            </form>
          
          
         <form action="/updateEmp" method="GET">
          <input type="hidden" name="ID"  value="{{this.ID}}">
          <button type="submit" style="background-color:rgb(21, 242, 24);width:80px;">Update</button>
        </form>

          </td>
      </tr>
      {{/each}}
    </tbody>
    </div> 
  </table>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.7/dist/umd/popper.min.js" integrity="sha384-zYPOMqeu1DAVkHiLqWBUTcbYfZ8osu1Nd6Z89ify25QV9guujx43ITvfi12/QExE" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.min.js" integrity="sha384-Y4oOpwW3duJdCWv5ly8SCFYWqFDsfob/3GkgExXKV4idmbt98QcxXYs9UoXAB7BZ" crossorigin="anonymous"></script>
</body>
</html>
